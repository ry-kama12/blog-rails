<div class ="post-title">
 <%= @post.title%>
</div>
<div class= "post-content">
<%= @post.content%>
</div>

<div class= "commentform">
  <%= form_for @comment, url: "/posts/#{@post.id}/comments" do |c| %>
    <%= c.text_area :message %>
  <button type="submit" class="btn btn-primary">コメントする</button>
  <% end %>
</div> 

<h4>＜コメント一覧＞</h4>
      <% if @comments %>
        <% @comments.each do |c| %> 
           <p> 
          <%= c.message %> 
          </p>
        <% end %>
      <% end %> 